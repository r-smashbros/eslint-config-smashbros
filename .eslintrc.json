{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-async-promise-executor": "off",
    "no-console": "off",
    "no-unused-vars": "off",
    "no-useless-escape": "off",
    "prefer-const": "error",
    "require-atomic-updates": "off"
  }
}